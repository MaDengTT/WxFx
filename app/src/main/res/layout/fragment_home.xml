<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xxm.mmd.wxfx.ui.home.HomeFragment">

    <RelativeLayout
        android:id="@+id/rl_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <include layout="@layout/title_layout"
            />
    </RelativeLayout>

    <ImageView
        android:src="@drawable/ic_banner"
        android:background="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_title"
        app:layout_constraintDimensionRatio="2:1"
        android:scaleType="centerCrop"
        android:id="@+id/iv_banner"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp" />


    <android.support.v7.widget.CardView
        android:id="@+id/cv_update"
        app:layout_constraintTop_toTopOf="@+id/cv_scan"
        app:layout_constraintRight_toLeftOf="@+id/cv_scan"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="45dp"
        android:layout_width="90dp"
        android:layout_height="90dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                app:layout_constraintBottom_toTopOf="@+id/tv_update"
                android:id="@+id/iv_update"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16sp"
                android:layout_marginBottom="8dp"
                app:layout_constraintDimensionRatio="1:1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_update"
                />

            <TextView
                android:id="@+id/tv_update"
                android:visibility="visible"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生成"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"
                />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cv_scan"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="45dp"
        android:layout_width="90dp"
        android:layout_height="90dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                app:layout_constraintBottom_toTopOf="@+id/tv_scan"
                android:id="@+id/iv_scan"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16sp"
                android:layout_marginBottom="8dp"
                app:layout_constraintDimensionRatio="1:1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_scan"
                />

            <TextView
                android:id="@+id/tv_scan"
                android:visibility="visible"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫一扫"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"
                />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cv_setting"
        app:layout_constraintLeft_toRightOf="@+id/cv_scan"
        app:layout_constraintTop_toTopOf="@+id/cv_scan"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="45dp"
        android:layout_width="90dp"
        android:layout_height="90dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                app:layout_constraintBottom_toTopOf="@+id/tv_setting"
                android:id="@+id/iv_setting"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16sp"
                android:layout_marginBottom="8dp"
                app:layout_constraintDimensionRatio="1:1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_setting"
                />

            <TextView
                android:id="@+id/tv_setting"
                android:visibility="visible"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"
                />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cv_help"
        app:layout_constraintTop_toBottomOf="@+id/cv_scan"
        app:layout_constraintRight_toRightOf="@+id/cv_scan"
        app:layout_constraintLeft_toLeftOf="@+id/cv_update"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="45dp"
        android:layout_width="90dp"
        android:layout_height="90dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                app:layout_constraintBottom_toTopOf="@+id/tv_help"
                android:id="@+id/iv_help"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16sp"
                android:layout_marginBottom="8dp"
                app:layout_constraintDimensionRatio="1:1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_help"
                />

            <TextView
                android:id="@+id/tv_help"
                android:visibility="visible"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帮助"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"
                />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cv_about"
        app:layout_constraintTop_toBottomOf="@+id/cv_scan"
        app:layout_constraintLeft_toLeftOf="@+id/cv_scan"
        app:layout_constraintRight_toRightOf="@+id/cv_setting"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="45dp"
        android:layout_width="90dp"
        android:layout_height="90dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                app:layout_constraintBottom_toTopOf="@+id/tv_about"
                android:id="@+id/iv_about"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16sp"
                android:layout_marginBottom="8dp"
                app:layout_constraintDimensionRatio="1:1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_about"
                />

            <TextView
                android:id="@+id/tv_about"
                android:visibility="visible"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"
                />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>