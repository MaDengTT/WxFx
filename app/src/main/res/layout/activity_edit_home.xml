<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.EditHomeActivity">


    <include layout="@layout/title_layout" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

               <LinearLayout
                   android:padding="8dp"
                   android:orientation="horizontal"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintDimensionRatio="3:1.1"
                   android:layout_width="0dp"
                   android:layout_height="0dp">

                   <ImageView
                       android:id="@+id/iv1"
                       android:src="@drawable/plus"
                       android:layout_margin="8dp"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="match_parent" />
                   <ImageView
                       android:id="@+id/iv2"
                       android:src="@drawable/plus"
                       android:layout_margin="8dp"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="match_parent" />
                   <ImageView
                       android:id="@+id/iv3"
                       android:src="@drawable/plus"
                       android:layout_margin="8dp"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="match_parent" />

               </LinearLayout>

            </android.support.constraint.ConstraintLayout>
            <RelativeLayout
                style="@style/setting_item_rl">

                <TextView
                    android:id="@+id/tv_card_name"
                    style="@style/setting_item_tv"
                    android:text="名片名称"
                    />

                <EditText
                    android:id="@+id/ed_card_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_card_name"
                    android:layout_marginLeft="16dp"
                    android:minWidth="80dp"
                    android:background="@null"
                    android:hint="名片名称"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_context_size"
                    android:textColor="@color/secondaryText"
                    />

            </RelativeLayout>
            <View
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background" />            <RelativeLayout
                style="@style/setting_item_rl">

                <TextView
                    android:id="@+id/tv_card_info"
                    style="@style/setting_item_tv"
                    android:text="信息描述"
                    />

                <EditText
                    android:id="@+id/ed_card_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_card_info"
                    android:layout_marginLeft="16dp"
                    android:minWidth="80dp"
                    android:background="@null"
                    android:hint="信息描述"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_context_size"
                    android:textColor="@color/secondaryText"
                    />

            </RelativeLayout>
            <View
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background" />            <RelativeLayout
                style="@style/setting_item_rl">

                <TextView
                    android:id="@+id/tv_wx_name"
                    style="@style/setting_item_tv"
                    android:text="微信号码"
                    />

                <EditText
                    android:id="@+id/ed_wx_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_wx_name"
                    android:layout_marginLeft="16dp"
                    android:minWidth="80dp"
                    android:background="@null"
                    android:hint="微信号码"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_context_size"
                    android:textColor="@color/secondaryText"
                    />

            </RelativeLayout>
            <View
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background" />            <RelativeLayout
                style="@style/setting_item_rl">

                <TextView
                    android:id="@+id/tv_phone_name"
                    style="@style/setting_item_tv"
                    android:text="手机号码"
                    />

                <EditText
                    android:id="@+id/ed_phone_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_phone_name"
                    android:layout_marginLeft="16dp"
                    android:minWidth="80dp"
                    android:background="@null"
                    android:hint="手机号码"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_context_size"
                    android:textColor="@color/secondaryText"
                    />

            </RelativeLayout>
            <View
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background" />

            <Button
                style="@style/but_bg_shape"
                android:id="@+id/but_send"
                android:layout_marginTop="8dp"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="32dp"
                android:text="发布名片"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>